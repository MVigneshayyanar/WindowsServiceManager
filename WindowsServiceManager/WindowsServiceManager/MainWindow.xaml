<Window
    x:Class="WindowsServiceManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsServiceManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Windows Service Manager">

    <StackPanel Padding="20" Spacing="10">

        <TextBox x:Name="SearchBox"
                 PlaceholderText="Search by service name..."
                 TextChanged="SearchBox_TextChanged"
                 Margin="0,0,0,10"/>

        <Button Content="Refresh Services"
                Click="RefreshServices_Click"
                Margin="0,0,0,10"
                Background="LightGray"
                Foreground="Black"/>

        <Grid ColumnDefinitions="1*,1*,2*,1*,1*"
              Padding="5"
              Background="LightGray"
              Margin="0,0,0,5">
            <TextBlock Text="Service Name" Grid.Column="0" FontWeight="Bold" Tag="ServiceName" Tapped="SortColumn_Tapped"/>
            <TextBlock Text="Status" Grid.Column="1" FontWeight="Bold" Tag="Status" Tapped="SortColumn_Tapped"/>
            <TextBlock Text="Description" Grid.Column="2" FontWeight="Bold" Tag="Description" Tapped="SortColumn_Tapped"/>
            <TextBlock Text="Startup Type" Grid.Column="3" FontWeight="Bold" Tag="StartupType" Tapped="SortColumn_Tapped"/>
            <TextBlock Text="Log On As" Grid.Column="4" FontWeight="Bold" Tag="LogOnAs" Tapped="SortColumn_Tapped"/>
        </Grid>

        <ListView x:Name="ServiceListView"
                  Height="650"
                  SelectionMode="Single">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:ServiceModel">
                    <Grid ColumnDefinitions="1*,1*,2*,1*,1*" Padding="5">
                        <TextBlock Text="{x:Bind ServiceName}" Grid.Column="0"/>
                        <TextBlock Text="{x:Bind Status}"
                                   Foreground="{x:Bind StatusColor}"
                                   Grid.Column="1"
                                   RightTapped="Status_RightTapped"/>
                        <TextBlock Text="{x:Bind Description}" Grid.Column="2"/>
                        <TextBlock Text="{x:Bind StartupType}"
                                   Grid.Column="3"
                                   Foreground="Blue"
                                   RightTapped="StartupType_RightTapped"/>
                        <TextBlock Text="{x:Bind LogOnAs}" Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
